html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel='stylesheet', href='/styles.css')
        title='Registrar Productos'
    body
        section
            div(class='container')
                div(class='row')
                    div(class='space')
                        div(class='guardados')
                            button(onclick="location.href='/productos'")='Productos Guardados'
                        div(class='titulo')
                            h3='Registro de Productos'
                        div(class='subtitulo')
                            p='Ingrese la siguiente información del producto'
                        div(class='form')
                            form(action="/productos" method="post")
                                input(type="text", name="tittle", class='input', placeholder='Nombre del Producto')
                                input(type="number", name="price" class='input', placeholder='Precio del producto') 
                                input(type="text", name="thumbnail", class='input', placeholder='URL de la Imágen') 
                                input(type="submit",class='btn btn-success', value='Guardar Datos') 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")